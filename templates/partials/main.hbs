{{!-- 3 columns: left / center / right --}}
<div class="ss-grid-columns">

  {{!-- Edges --}}
  <div class="ss-col">
    <section class="ss-panel-edgesflaws">
      <h3>Edges</h3>
      <textarea name="system.edges.0">{{system.edges.[0]}}</textarea>
      <textarea name="system.edges.1">{{system.edges.[1]}}</textarea>
      <textarea name="system.edges.2">{{system.edges.[2]}}</textarea>
      <textarea name="system.edges.3">{{system.edges.[3]}}</textarea>
      <textarea name="system.edges.4">{{system.edges.[4]}}</textarea>
    </section>
  </div>

  {{!-- Complications --}}
  <div class="ss-col">
    <section class="ss-panel-complications">
      <h3>Complications</h3>
      <textarea name="system.complications.0">{{system.complications.[0]}}</textarea>
      <textarea name="system.complications.1">{{system.complications.[1]}}</textarea>
      <textarea name="system.complications.2">{{system.complications.[2]}}</textarea>
    </section>
  </div>

  {{!-- Flaws --}}
  <div class="ss-col">
    <section class="ss-panel-edgesflaws">
      <h3>Flaws</h3>
      <textarea name="system.flaws.0">{{system.flaws.[0]}}</textarea>
      <textarea name="system.flaws.1">{{system.flaws.[1]}}</textarea>
      <textarea name="system.flaws.2">{{system.flaws.[2]}}</textarea>
      <textarea name="system.flaws.3">{{system.flaws.[3]}}</textarea>
      <textarea name="system.flaws.4">{{system.flaws.[4]}}</textarea>
    </section>
  </div>

</div> {{!-- end .ss-grid-columns --}}